{
    "compilerOptions": {
        "declaration": true, // Tip dosyaları oluşturulacak
        "declarationDir": "dist", // Deklarasyonların yazılacağı dizin
        "outDir": "dist", // Derlenmiş JS dosyalarının yazılacağı dizin
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "module": "esnext", // ESNext kullanarak modül formatı
        "target": "es5", // ES5 ile geriye dönük uyumluluk
        "strict": true
    },
    "include": ["src/**/*"], // Tüm kaynak kodları dahil edin
    "exclude": ["node_modules", "dist"]
}
